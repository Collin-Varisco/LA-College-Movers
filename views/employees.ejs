<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="/css/style.css" />
  <title>Employees</title>
</head>
<body>
    <button class="home-button" onclick="location.href='/'">Home</button>
    <div class="options-panel">
    <form action="/sortEmployees" method="POST">
        <fieldset>
          <div class="boxes">
          <h2> Sort </h2>
          <h3>Positions</h3>
										<input class="checkBox" type="checkbox" id="movers" name="movers"><div class="checkBoxText">Mover</div> <br>
										<input class="checkBox" type="checkbox" id="support" name"support"><div class="checkBoxText">Customer Support</div><br>
										<input class="checkBox" type="checkbox" id="managers" name="managers"><div class="checkBoxText">Manager</div>
          <br>
          <br>
          <h3>Franchises</h3>
										<input class="checkBox" type="checkbox" name="lafayette"><div class="checkBoxText">Lafayette</div><br>
										<input class="checkBox" type="checkbox" name="batonrouge"><div class="checkBoxText">Baton Rouge</div><br>
										<input class="checkBox" type="checkbox" name="neworleans"><div class="checkBoxText">New Orleans</div>
          <br>
          <br>
          </div>
          <input type="submit" id="employeeSubmit" name="submit" value="Submit">
        </fieldset>
    </form>
    </div>
				<div class="addLink">
						<a href="/employees/add">Add Employee</a>
				</div>
        <h2 class="textAlignC">Employee Information</h2>
        <table class="center-table" style="border-left: 1px solid white;" border="1">
            <tr>
                <th>Employee ID#</th>
                <th>Full Name</th>
                <th>Position</th>
                <th>Franchise</th>
                <th>Modify</th>
            </tr>

            <%
            if(employeeData.length!=0){
            var i=1;
            employeeData.forEach(function(data){
            %>
            <tr>

                <td><%=data.EmployeeID %></td>
                <td><%=data.Fname %> <%=data.Lname %></td>
                <td><%=data.Position %></td>
                <td><%=data.FranchiseID %></td>
																<td><a href="/edit/employees?id=<%=data.EmployeeID%>">Edit</a><br>
                <a href="/employees/delete/<%=data.EmployeeID%>">Delete</a></td>
            </tr>
            <%  i++; }) %>
            <% } else{ %>
                <tr>
                    <td colspan="7">No Data</td>
                </tr>
            <% } %>
        </table>
</body>
</html>
