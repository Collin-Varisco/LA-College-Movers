<!DOCTYPE html>
<html lang="en">
<link rel="stylesheet" href="/css/style.css" />
<head>
  <title>Employees</title>
  
</head>
<body>
    
    <div style="float: left; width: 10%;">
    <form action="/sortEmployees" method="POST">
        <fieldset>
            <h3>Positions</h3>
            <input type="checkbox" id="movers" name="movers">
            <label for="movers">Mover</label><br>
            <input type="checkbox" id="managers" name="managers">
            <label for="manager">Manager</label><br>
            <h3>Franchises</h1>
            <input type="checkbox" id="lafayette" name="lafayette">
            <label for="lafayette">Lafayette</label><br>
            <input type="checkbox" id="batonrouge" name="batonrouge">
            <label for="batonrouge">Baton Rouge</label><br>
            <input type="checkbox" id="neworleans" name="neworleans">
            <label for="neworleans">New Orleans</label><br><br>
            <input type="submit" name="submit" value="Submit">
        </fieldset>
    </form>
    </div>
    <div style="width: 50%; margin: auto; padding: 10px;">
    <h2>Employee Information</h2>
    <div style="margin: 0 auto;">
        <table border="1">
            <tr>
                <th>Employee ID#</th>
                <th>Full Name</th>
                <th>Position</th>
                <th>Franchise</th>
                <th>Modify</th>
            </tr>
            
            <%
            if(employeeData.length!=0){
            var i=1;
            employeeData.forEach(function(data){
            %>
            <tr>
               
                <td><%=data.EmployeeID %></td>
                <td><%=data.Fname %> <%=data.Lname %></td>
                <td><%=data.Position %></td>
                <td><%=data.FranchiseID %></td>
                <td><a href="/employees/edit/<%=data.id%>">Edit | </a>
                <a href="/employees/delete/<%=data.id%>">Delete</a></td>
            </tr>
            <%  i++; }) %>
            <% } else{ %>
                <tr>
                    <td colspan="7">No Data</td>
                </tr>
            <% } %>
        </table>
    </div>
</body>
</html>
